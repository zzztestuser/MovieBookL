<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>SessionServlet</servlet-name>
  	<display-name>SessionServlet</display-name>
  	<description></description>
  	<servlet-class>com.moviebook.servlet.SessionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserServlet</servlet-name>
  	<display-name>UserServlet</display-name>
  	<description>HTTPServlet handling RESTful calls for user entities</description>
  	<servlet-class>com.moviebook.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RecommendedMoviesServlet</servlet-name>
  	<display-name>RecommendedMoviesServlet</display-name>
  	<description></description>
  	<servlet-class>com.moviebook.servlet.RecommendedMoviesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SessionServlet</servlet-name>
  	<url-pattern>/api/session</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserServlet</servlet-name>
  	<url-pattern>/api/users/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RecommendedMoviesServlet</servlet-name>
  	<url-pattern>/api/movies/recommended</url-pattern>
  </servlet-mapping>
</web-app>
